<?xml version='1.0' encoding='utf-8'?>
<widget id="com.checkmate.checkmatelaw" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CheckmateLaw</name>
    <description>
		A sample Apache Cordova application that responds to the deviceready event.
	</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
		Apache Cordova Team
	</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <allow-navigation href="http://*/*" />
        <access origin="cdvfile://*" />
    </platform>
    <platform name="ios">
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#24a9e7" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <key>NSCameraUsageDescription</key>
        <string>To take images and videos for case files</string>
        <key>NSMicrophoneUsageDescription</key>
        <string>To record audio for case files</string>
    </platform>
    <plugin name="cordova-plugin-camera" spec="^2.4.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value=" " />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <plugin name="cordova-plugin-compat" spec="^1.1.0" />
    <engine name="android" spec="^6.2.3" />
</widget>
